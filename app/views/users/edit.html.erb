
<% if @user.errors.any? %>
    <div id="errors">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user profile from being updated:</h2>

        <ul>
            <% @user.errors.each do |error|%>
                <li><%= error.full_message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with model: @user do |form| %>
    <div>
        <%= form.label :username, value: "Your username here" %>
        <%= form.text_field :username %>
    </div>
    <div>
        <%= form.label :email %>
        <%= form.email_field :email %>
    </div>
    <div>
        <%= form.label :password %>
        <%= form.password_field :password %>
    </div>
    <%= form.submit "Update" %>
<% end %>