<%= form_with model: @user do |form| %>
    <div>
        <%= form.label :username, value: "Your username here" %>
        <%= form.text_field :username, value: "Luc" %>
    </div>
    <div>
        <%= form.label :email %>
        <%= form.email_field :email, placeholder: "email@address.com" %>
    </div>
    <div>
        <%= form.label :password %>
        <%= form.password_field :password %>
    </div>
    <%= form.submit %>
<% end %>

